---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ChatBot from '../components/ChatBot.tsx';
import '../styles/global.css';
---
<!doctype html>
<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>Grados Universidad de Pamplona</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Open+Sans:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-full flex flex-col">
    <Navbar />
    <main class="flex-grow">
      <slot />
    </main>
    <ChatBot client:load />
    <Footer />
  </body>
</html>

<style is:global>
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
</style>