  <style>
    .footer {
      margin-top: auto;
    }
  
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
  
    /* Sección superior azul */
    .footer-header {
      background-color: #1e4a72;
      color: white;
      padding: 12px 0;
    }
  
    .schedule-info {
      margin: 0;
      font-size: 0.9rem;
      text-align: center;
      line-height: 1.4;
    }
  
    /* Sección de información de contacto */
    .footer-info {
      background-color: #c85450;
      color: white;
      padding: 8px 0;
    }
  
    .address-info {
      margin: 0;
      font-size: 0.85rem;
      text-align: center;
      line-height: 1.4;
    }
  
    /* Sección principal roja */
    .footer-main {
      background-color: #b94a47;
      color: white;
      padding: 30px 0;
    }
  
    .footer-content {
      display: grid;
      grid-template-columns: 1fr 1fr auto;
      gap: 40px;
      align-items: start;
    }
  
    .footer-section {
      display: flex;
      flex-direction: column;
    }
  
    .section-title {
      font-size: 1.1rem;
      font-weight: bold;
      margin: 0 0 15px 0;
      color: white;
    }
  
    .contact-info {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }
  
    .contact-info p {
      margin: 0;
      font-size: 0.9rem;
      line-height: 1.4;
    }
  
    .email-link {
      color: white;
      text-decoration: underline;
      font-size: 0.9rem;
      transition: opacity 0.3s ease;
    }
  
    .email-link:hover {
      opacity: 0.8;
    }
  
    /* Redes sociales */
    .social-section {
      justify-self: end;
    }
  
    .social-links {
      display: flex;
      flex-direction: column;
      gap: 15px;
    }
  
    .social-link {
      display: flex;
      align-items: center;
      gap: 10px;
      color: white;
      text-decoration: none;
      font-size: 0.9rem;
      transition: opacity 0.3s ease;
    }
  
    .social-link:hover {
      opacity: 0.8;
    }
  
    .social-icon {
      width: 24px;
      height: 24px;
      flex-shrink: 0;
    }
  
    /* Créditos */
    .footer-credits {
      background-color: #a03d3a;
      color: white;
      padding: 15px 0;
    }
  
    .credits-text {
      margin: 0;
      font-size: 0.85rem;
      text-align: center;
      font-style: italic;
      line-height: 1.4;
    }
  
    /* Responsive Design */
    @media (max-width: 768px) {
      .footer-content {
        grid-template-columns: 1fr;
        gap: 25px;
        text-align: center;
      }
  
      .social-section {
        justify-self: center;
      }
  
      .social-links {
        flex-direction: row;
        justify-content: center;
        gap: 20px;
      }
  
      .schedule-info,
      .address-info {
        font-size: 0.8rem;
        padding: 0 10px;
      }
  
      .section-title {
        font-size: 1rem;
      }
  
      .contact-info p,
      .email-link {
        font-size: 0.85rem;
      }
  
      .credits-text {
        font-size: 0.8rem;
        padding: 0 10px;
      }
    }
  
    @media (max-width: 480px) {
      .container {
        padding: 0 15px;
      }
  
      .footer-main {
        padding: 20px 0;
      }
  
      .footer-content {
        gap: 20px;
      }
  
      .social-links {
        flex-direction: column;
        gap: 12px;
      }
  
      .schedule-info,
      .address-info,
      .credits-text {
        font-size: 0.75rem;
      }
    }
  </style>